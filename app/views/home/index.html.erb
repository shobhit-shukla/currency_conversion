<div class="container">
	<div class="top-body">
		<h1>Currency Conversion</h1>
		<%= form_for :currency, url: home_index_path, remote: true, html: {class: "form-inline"} do |f| %>
			<div class="form-group">
		 		<%= label_tag :base_currency %>:
		 		<%= f.select "base_currency", options_for_select([ "USD", "EUR", "INR" ], "INR"), {}, class: "form-control"%>
		 	</div>
	 	  <div class="form-group">
			 <%= label_tag :start_at %>:
			 <%= f.text_field :start_at, class: 'datepicker' %>
			</div>
			<div class="form-group"> 
			 <%= label_tag :end_at %>:
		 	 <%= f.text_field :end_at, class: 'datepicker' %>
		 	</div>
		  <div><%= submit_tag 'Search', class: 'btn btn-info' %></div>
		<% end %>
	</div>
<div id="chart"></div>
</div>